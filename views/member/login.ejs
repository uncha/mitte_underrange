<body>
<% include ../partitials/gnb %>
<h1>로그인</h1>
<div class="login-group center-block">
    <form class="form-horizontal" id="default_write_form" method="POST" action="/member/login_process?redirect=<%=redirect%>">
        <div class="form-group">
            <label class="col-sm-5 control-label">아이디</label>
            <div class="col-sm-7">
                <input style="width:180px" class="form-control" name="user_id" type="text" placeholder="아이디를 입력해 주세요.">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label">패스워드</label>
            <div class="col-sm-7">
                <input style="width:180px" type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="패스워드를 입력해 주세요.">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-default">로그인</button>
            <a class="btn btn-default" href="javascript:history.back();" role="button">아이디/비밀번호찾기</a>
            <a class="btn btn-default" href="/member/register" role="button">회원가입</a>
        </div>
    </form>
</div>
<% include ../partitials/footer %>